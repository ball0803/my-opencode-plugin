{
  "name": "my-opencode-plugin",
  "version": "1.0.0",
  "description": "A modular OpenCode plugin for background task management and agent calling",
  "type": "module",
  "main": "dist/plugin.js",
  "types": "dist/plugin.d.ts",
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "prepublish": "bun run build",
    "test": "bun run jest",
    "test:watch": "bun run jest --watch",
    "test:coverage": "bun run jest --coverage",
    "test:single": "bun run jest -t",
    "test:update": "bun run jest -u",
    "install:commands": "bash scripts/install-command.sh",
    "uninstall:commands": "bash scripts/uninstall-command.sh"
  },
  "keywords": [
    "opencode",
    "plugin",
    "background",
    "agent",
    "task"
  ],
  "opencode": {
    "commands": [
      {
        "name": "init-deep",
        "path": "commands/init-deep.md",
        "description": "Generate hierarchical AGENTS.md files. Root + complexity-scored subdirectories."
      },
      {
        "name": "mcp",
        "path": "commands/mcp.md",
        "description": "Configure MCP servers for OpenCode"
      }
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ast-grep/napi": "^0.40.5",
    "@modelcontextprotocol/sdk": "1.25.3",
    "@opencode-ai/plugin": "^1.0.162",
    "@types/picomatch": "^4.0.2",
    "commander": "^14.0.2",
    "jsonc-parser": "^3.2.0",
    "my-opencode-plugin": "file:my-opencode-plugin-1.0.0.tgz",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bun": "^1.3.5",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "jest-globals": "^0.1.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
